<Window x:Class="BatchMonitor.Views.AddBatchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add New Batch" Height="480" Width="420"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular" TextElement.FontSize="13"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize" WindowStyle="SingleBorderWindow"
        ShowInTaskbar="False">
    <Window.Resources>
        <Style x:Key="RedFocusVisualStyle" TargetType="Control">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Stroke="Red" StrokeThickness="2" SnapsToDevicePixels="True"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CancelRaisedButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Background" Value="Red"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Red"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="Red"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="Red"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="BorderBrush" Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CompactTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="materialDesign:ValidationAssist.UsePopup" Value="True"/>
            <Setter Property="materialDesign:HintAssist.FloatingScale" Value="0.75"/>
            <Setter Property="materialDesign:HintAssist.FloatingOffset" Value="0,-18"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,8"/>
        </Style>
        <Style x:Key="CompactComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="materialDesign:ValidationAssist.UsePopup" Value="True"/>
            <Setter Property="materialDesign:HintAssist.FloatingScale" Value="0.75"/>
            <Setter Property="materialDesign:HintAssist.FloatingOffset" Value="0,-18"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,8"/>
        </Style>
        <Style x:Key="CompactIconButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <materialDesign:Card Grid.Row="0" Margin="8" Padding="12">
            <StackPanel>
                <TextBox Name="BatchNameTextBox"
                         materialDesign:HintAssist.Hint="Enter batch name"
                         Style="{StaticResource CompactTextBox}"
                         Margin="0,0,0,8"/>
                <ComboBox Name="BatchTypeComboBox"
                          materialDesign:HintAssist.Hint="Select batch type"
                          Style="{StaticResource CompactComboBox}"
                          Margin="0,0,0,8">
                    <ComboBoxItem Content="Fixed Time (Morning/Evening)" Tag="FixedTime"/>
                    <ComboBoxItem Content="Hourly (Continuous)" Tag="Hourly"/>
                </ComboBox>
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="LogFilePathTextBox" Grid.Column="0"
                             materialDesign:HintAssist.Hint="Main log file path (Batch.logs) - Optional"
                             Style="{StaticResource CompactTextBox}"
                             Margin="0,0,4,0"/>
                    <Button Grid.Column="1" Style="{StaticResource CompactIconButton}"
                            Click="BrowseLogFile_Click" ToolTip="Browse for main log file">
                        <materialDesign:PackIcon Kind="FolderOpen" Width="16" Height="16"/>
                    </Button>
                </Grid>
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="ErrorLogFilePathTextBox" Grid.Column="0"
                             materialDesign:HintAssist.Hint="Error log file path (Error.logs) - Optional"
                             Style="{StaticResource CompactTextBox}"
                             Margin="0,0,4,0"/>
                    <Button Grid.Column="1" Style="{StaticResource CompactIconButton}"
                            Click="BrowseErrorLogFile_Click" ToolTip="Browse for error log file">
                        <materialDesign:PackIcon Kind="FolderOpen" Width="16" Height="16"/>
                    </Button>
                </Grid>
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="CustomLogFilePathTextBox" Grid.Column="0"
                             materialDesign:HintAssist.Hint="Custom log file path (file.txt, etc.) - Optional"
                             Style="{StaticResource CompactTextBox}"
                             Margin="0,0,4,0"/>
                    <Button Grid.Column="1" Style="{StaticResource CompactIconButton}"
                            Click="BrowseCustomLogFile_Click" ToolTip="Browse for custom log file">
                        <materialDesign:PackIcon Kind="FolderOpen" Width="16" Height="16"/>
                    </Button>
                </Grid>
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="ConfigFilePathTextBox" Grid.Column="0"
                             materialDesign:HintAssist.Hint="Config file path (Optional)"
                             Style="{StaticResource CompactTextBox}"
                             Margin="0,0,4,0"/>
                    <Button Grid.Column="1" Style="{StaticResource CompactIconButton}"
                            Click="BrowseConfigFile_Click" ToolTip="Browse for config file">
                        <materialDesign:PackIcon Kind="FolderOpen" Width="16" Height="16"/>
                    </Button>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="ExecutablePathTextBox" Grid.Column="0"
                             materialDesign:HintAssist.Hint="Executable File Path (e.g., StartServices.exe)"
                             Style="{StaticResource CompactTextBox}"
                             Margin="0,0,4,0"/>
                    <Button Name="BrowseExecutableButton" Grid.Column="1"
                            Style="{StaticResource CompactIconButton}"
                            Click="BrowseExecutableButton_Click" ToolTip="Browse for executable file">
                        <materialDesign:PackIcon Kind="FolderOpen" Width="16" Height="16"/>
                    </Button>
                </Grid>
            </StackPanel>
        </materialDesign:Card>
        <Border Grid.Row="1" Background="{DynamicResource MaterialDesignToolBarBackground}"
                Padding="16,8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource CancelRaisedButton}"
                        FocusVisualStyle="{StaticResource RedFocusVisualStyle}"
                        Click="Cancel_Click" IsCancel="True"
                        Margin="0,0,8,0" Padding="12,6">
                    Cancel
                </Button>
                <Button x:Name="OkOrUpdateButton" Style="{DynamicResource MaterialDesignRaisedButton}" 
                        Click="OK_Click" IsDefault="True" Padding="12,6">
                    Add Batch
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>