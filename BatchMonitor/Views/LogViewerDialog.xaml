<Window x:Class="BatchMonitor.Views.LogViewerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Log Viewer" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" Margin="16,8,16,8" materialDesign:ColorZoneAssist.Mode="PrimaryMid">
            <TabItem Name="MainLogTab" Header="Main Log">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileDocument" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="Main Log"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <TextBox Name="MainLogTextBox"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 Margin="16"
                                 BorderThickness="0"
                                 Background="Transparent"/>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Name="ErrorLogTab" Header="Error Log">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AlertCircle" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="Error Log"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <TextBox Name="ErrorLogTextBox"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 Margin="16"
                                 BorderThickness="0"
                                 Background="Transparent"/>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Name="ConfigTab" Header="Config File">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cog" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="Config File"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <TextBox Name="ConfigTextBox"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 Margin="16"
                                 BorderThickness="0"
                                 Background="Transparent"/>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <materialDesign:Card Grid.Row="2" Margin="16,8,16,16" materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <StackPanel Orientation="Horizontal" Margin="16,8">
                <TextBlock Name="StatusTextBlock" 
                           Text="Ready" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
