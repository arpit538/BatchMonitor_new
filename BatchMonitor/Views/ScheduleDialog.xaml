<Window x:Class="BatchMonitor.Views.ScheduleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Select Date" Height="425" Width="314"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="12"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid Margin="8,10,8,9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->

        <!-- Form Fields -->
        <StackPanel Name="FormContent" Grid.Row="1" Grid.RowSpan="2" Height="345" VerticalAlignment="Top">
            <Calendar Name="DatePicker"
                      FirstDayOfWeek="Monday"
                      DisplayMode="Month"
                      SelectionMode="SingleDate"
                      Background="Transparent"
                      BorderThickness="1"
                      BorderBrush="{DynamicResource MaterialDesignDivider}"
                      Margin="0,0,0,8"
                      Height="335">
                <Calendar.CalendarDayButtonStyle>
                    <Style TargetType="CalendarDayButton">
                        <Setter Property="Width" Value="32"/>
                        <Setter Property="Height" Value="28"/>
                        <Setter Property="FontSize" Value="11"/>
                        <Setter Property="Margin" Value="1"/>
                    </Style>
                </Calendar.CalendarDayButtonStyle>
                <Calendar.CalendarButtonStyle>
                    <Style TargetType="CalendarButton">
                        <Setter Property="Width" Value="42"/>
                        <Setter Property="Height" Value="28"/>
                        <Setter Property="FontSize" Value="11"/>
                    </Style>
                </Calendar.CalendarButtonStyle>
            </Calendar>
            <TextBlock x:Name="HelpText"
                       FontSize="10"
                       Opacity="0.6"
                       TextWrapping="Wrap" Height="41" RenderTransformOrigin="0.495,0.816"/>

            <Grid Name="TimePickerGrid" Visibility="Collapsed" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ComboBox Name="HourComboBox"
                          Grid.Column="0"
                          materialDesign:HintAssist.Hint="Hour"
                          Style="{DynamicResource MaterialDesignFloatingHintComboBox}"
                          FontSize="12"
                          Height="32"
                          Margin="0,0,4,0"/>
                <ComboBox Name="MinuteComboBox"
                          Grid.Column="1"
                          materialDesign:HintAssist.Hint="Min"
                          Style="{DynamicResource MaterialDesignFloatingHintComboBox}"
                          FontSize="12"
                          Height="32"
                          Margin="4,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,8,0,0">
            <Button Style="{DynamicResource MaterialDesignFlatButton}" 
                    Click="Cancel_Click" 
                    FontSize="12"
                    Height="28"
                    Padding="12,4"
                    Margin="0,0,4,0">
                Cancel
            </Button>
            <Button Style="{DynamicResource MaterialDesignRaisedButton}" 
                    Click="OK_Click"
                    Name="ConfirmButton"
                    IsDefault="True"
                    FontSize="12"
                    Height="28"
                    Padding="12,4">
                Select
            </Button>
        </StackPanel>
    </Grid>
</Window>